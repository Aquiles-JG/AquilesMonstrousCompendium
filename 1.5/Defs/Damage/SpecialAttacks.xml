<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <DamageDef>
    <defName>Aq_PetrifyingGaze</defName>
    <label>petrifying gaze</label>
    <workerClass>DamageWorker_Blunt</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been petrified.</deathMessage>
    <hediff>Crush</hediff>
    <hediffSkin>Shredded</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Blunt</armorCategory>
    <additionalHediffs>
      <li>
        <hediff>Aq_Petrification</hediff>
        <severityPerDamageDealt>0.25</severityPerDamageDealt>
      </li>
    </additionalHediffs>
  </DamageDef>
  
  <DamageDef>
	<defName>Aq_SuckingSting</defName>
	<label>sucking sting</label>
	<workerClass>DamageWorker_Stab</workerClass>
	<externalViolence>true</externalViolence>
	<deathMessage>{0} has been sucked dry to death.</deathMessage>
	<hediff>Stab</hediff>
	<hediffSolid>Crack</hediffSolid>
	<additionalHediffs>
		<li>
			<hediff>BloodLoss</hediff>
			<severityPerDamageDealt>0.08</severityPerDamageDealt>
			<victimSeverityScaling>ToxicResistance</victimSeverityScaling>
			<inverseStatScaling>true</inverseStatScaling>
		</li>
	</additionalHediffs>
	<harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
	<impactSoundType>Slice</impactSoundType>
	<armorCategory>Sharp</armorCategory>
  </DamageDef>
  
  <DamageDef>
    <defName>Aq_ToxicSting</defName>
    <label>venomous sting</label>
    <workerClass>DamageWorker_Stab</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been stung to death.</deathMessage>
    <hediff>Stab</hediff>
    <hediffSolid>Crack</hediffSolid>
    <additionalHediffs>
      <li>
        <hediff>Aq_ToxicBite</hediff>
        <severityPerDamageDealt>0.005</severityPerDamageDealt>
        <victimSeverityScaling>ToxicResistance</victimSeverityScaling>
        <inverseStatScaling>true</inverseStatScaling>
      </li>
    </additionalHediffs>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
  </DamageDef>
</Defs>
