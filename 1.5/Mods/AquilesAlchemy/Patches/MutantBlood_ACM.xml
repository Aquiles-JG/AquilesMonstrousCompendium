<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Biotech</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="Aq_MakeMutantBlood"]/ingredients/li[2]/filter/thingDefs</xpath>
          <value>
            <li>Aq_GorgonHeart</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="Aq_MakeMutantBlood"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>Aq_GorgonHeart</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="Aq_MakeMutantBlood"]/defaultIngredientFilter/thingDefs</xpath>
          <value>
            <li>Aq_GorgonHeart</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
